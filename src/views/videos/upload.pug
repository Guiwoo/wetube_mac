extends ../base.pug

block content
    div.upload__container
        div.upload__video
            video#preview
            button#startBtn.social__btn Start Recording
        if errorMessage 
            span={errorMessage}
        form(method="POST",enctype="multipart/form-data")
            label.edit-label(for="video") Video File 
            input(type="file", accept = "video/*", required, id="video" name="video")
            label.edit-label(for="thumb") Thumbnail File
            input(type="file", accept = "image/*", required, id="thumb" name="thumb") 
            input(placeholder="Title",required, type="text" name="title" maxlength=80)
            input(placeholder="Description",required, type="text" name="description" minlength=10)
            input(placeholder=`Hashtags, seperated by comma ","`,required, type="text" name="hashtags")
            input(type="submit",value="Uplaod Video")

block scripts 
    script(src="/static/js/recorder.js")