extends ../base.pug

block content
    div#videoContainer(data-id=video._id)
        video(src=`${video.fileUrl}`,crossorigin) 
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currenTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range",step="1", value="0", min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range",step="0.1", value=0.5, min="0", max="1")#volume
                span#mute
                    i.fas.fa-volume-up
            div
                span#fullScreen
                        i.fas.fa-expand
    div
        p=video.description
        small=video.createdAt
    div
        small Uploaded by 
            a(href=`/users/${video.owner._id}`)=video.owner.name
        if String(video.owner._id) === String(loggedInUser._id)
            a(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a(href=`${video.id}/delete`) Delete Video &rarr;
        div.video__comment-container
            div.video__add-comments
            if loggedIn
                form.video__comment-form#commentForm(style={position:"relative"})
                    textarea(cols="50",rows="10",placeholder="Write on a comment..")
                    button.add_btn(style={background:"transparent",border:"none",position:"absolute",right:0,bottom:0,color:"white"}) ðŸŒˆ Add a CommentðŸŒˆ
            .video__comments 
                ul 
                    each comment in video.comments.reverse()
                        li.video__comment(data-id=comment.id)
                            div 
                                i.fas.fa-comment
                                span #{comment.text}
                            if String(comment.owner._id) === String(loggedInUser._id)
                                i.fas.fa-trash-alt#delete_btn

block scripts
    script(src="/static/js/videoPlayer.js")
    if loggedIn
        script(src="/static/js/comment.js")
    