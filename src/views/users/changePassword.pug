extends ../base.pug

block content 
    H4 Change Password
    if errorMessage 
        span=errorMessage
    form(method="post")
        input(placeholder="Old Password" type="password" name="oldPassword")
        input(placeholder="New Password" type="password" name="newPassword")
        input(placeholder="New Password Confirm" type="password" name="newPasswordConfirm")
        input(type="submit" value="Change Password")
